{
  "name": "dev.beautyincode.se",
  "version": "0.2.0",
  "description": "Dev web site for Beauty In Code",
  "main": "index.html",
  "scripts": {
    "prestart": "yarn",
    "start": "concurrently 'yarn run watch' 'yarn run jekyll:serve'",
    "watch": "yarn run watch:css && yarn run watch:svg && yarn run watch:js",
    "watch:css": "onchange ./src/css/* -i -- yarn run css",
    "watch:svg": "onchange ./src/svg/* -i -- yarn run svg",
    "watch:js": "onchange ./src/js/* -i -- yarn run js",
    "css": "uglifycss ./src/css/*.css --output ./_includes/styles.css",
    "svg": "svg-sprite -C svg-sprite.config.json --dest ./_includes src/svg/*.svg",
    "js": "uglifyjs ./src/js/*.js --output ./_includes/main.js",
    "jekyll:serve": "sleep 1; jekyll serve --incremental",
    "jekyll:build": "jekyll build --incremental",
    "build": "yarn run css && yarn run svg && yarn run js"
  },
  "author": "Fredrik Frodlund",
  "license": "UNLICENSED",
  "dependencies": {
    "concurrently": "^4.1.0",
    "onchange": "^5.2.0",
    "svg-sprite": "^1.3.7",
    "uglify-es": "^3.0.28",
    "uglifycss": "^0.0.29",
    "yarn": "^1.17.3"
  }
}
